<div class="banner-index bg-black">
</div>
<div class="container my-5">

  <div class="mb-4">
    <%= link_to "< Back to home", root_path %>
  </div>

  <h2>All the toys</h2>

    <div class="toys-filter">
      <%= link_to "All the toys", toys_path(@toys), class: "filter" %>
      <%= link_to "0-6 MONTHS", toys_path(age: "0-6 MONTHS"), class: "filter" %>
      <%= link_to "6-12 MONTHS", toys_path(age: "6-12 MONTHS"), class: "filter" %>
      <%= link_to "1-3 YEARS", toys_path(age: "1-3 YEARS"), class: "filter" %>
      <%= link_to "3-6 YEARS", toys_path(age: "3-6 YEARS"), class: "filter" %>
      <%= link_to "6-12 YEARS", toys_path(age: "6-12 YEARS"), class: "filter" %>
      <%= link_to "12+ YEARS", toys_path(age: "12+ YEARS"), class: "filter" %>
    </div>

  <div class='cards'>
    <% @toys.each do |toy| %>
    <div class="cards-container">
    <a href="<%= toy_path(toy) %>">
      <div class="container-image">
        <div class="img">
          <% if toy.image_url.attached? %>
            <%= cl_image_tag(toy.image_url.key) %>
          <% else %>
            <%= image_tag 'image-default.jpeg'%>
          <% end %>
        </div>
      </div>
      <div class="card-details">
        <h3><%= toy.name %></h3>
        <p><%= toy.location %></p>
        <p><%= toy.price %><%= 'â‚¬/day' %></p>
        <button class='button'><%= link_to "Reserve", new_toy_reservation_path(toy) %></button>
      </div>
    </div>
      <%#= render 'layouts/card' %>
    <% end %>
  </div>
</div>
