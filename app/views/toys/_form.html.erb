<%= simple_form_for(thing) do |f| %>
  <%= f.input :name, :label => "Toy name" %>
  <%= f.input :price %>
  <%= f.input :description %>
  <%= f.input :image_url, as: :file, :label => "Photo" %>
  <%= f.input :location %>
  <%= f.input :age %>

  <%= f.submit class: 'button btn btn-primary'%>
<% end %>
