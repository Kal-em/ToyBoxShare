
<div class="dasboard-container">
  <h1>Dashboard</h1>
  <h2>My reservations</h2>
    <div class='cards'>
      <% @reservations.each do |reservation| %>
      <div class="cards-container">
        <div class="container-image">
          <div class="img">
          <% if reservation.toy.image_url.attached? %>
          <%= cl_image_tag (reservation.toy.image_url.key)%>
          <% else %>
          <%= image_tag 'image-default.jpeg' %>
          <% end %>
          </div>

        </div>
    </div>

  <h2>My Toys</h2>
      <% @toys.each do |toy| %>
      <div class="cards-container">
        <div class="container-image">
          <div class="img">
            <% if toy.image_url.attached? %>
              <%= cl_image_tag (toy.image_url.key)%>
            <% else %>
              <%= image_tag 'image-default.jpeg' %>
            <% end %>
          </div>
        </div>
        <div class="card-details">

          <h3><%= toy.name %></h3>
          <p><%=toy.price.to_i%> EUR per day</p>
          <p><%=toy.age%> months</p>
          <p>Amsterdam 1084VV today at 14:55</p>
          </div>
        </div>
      <% end %>
    </div>
        <div data-controller="toggle">
          <button data-action="click->toggle#show">Sell a toy</button>
          <div class="d-none" data-toggle-target="togglable">
            <%= render "toys/form", thing: @toy %>
          </div>
        </div>
        </div>
    </div>

  </div>
</div>
