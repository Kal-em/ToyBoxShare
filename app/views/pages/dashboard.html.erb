<div class="dasboard-container">
  <h1>Dashboard</h1>
  <h2>My reservations</h2>
    <div class='cards'>
      <% @reservations.each do |reservation| %>
      <div class="cards-container">
        <div class="container-image">
          <%# <%= cl_image_tag reservation.toy.image_url, alt: "procuct.name.photo", class: "img"%>
        </div>
        <div class="card-details">
          <h3><%= reservation.toy.name %></h3>
          <p><%= reservation.toy.location %></p>
          <button class='button'><%= link_to "Manage" %></button>
          <%= link_to "Delete",  reservation_path(reservation), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
      <% end %>
    </div>
  <h2>My Toys</h2>
      <% @toys.each do |toy| %>
      <div class="cards-container">
        <div class="container-image">
          <%# <%= cl_image_tag reservation.toy.image_url, alt: "procuct.name.photo", class: "img"%>
        </div>
        <div class="card-details">
          <h3><%= toy.name %></h3>
          <p><%= toy.location %></p>
          <button class='button'><%= link_to "Manage" %></button>
          <%= link_to "Delete",  toy_path(toy), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        </div>
      </div>
      <% end %>
    </div>
    <div>
      <button>Sell a toy</button>
    <div class="">
      <%= render "toys/form", thing: @toy %>
      </div>
    </div>
</div>